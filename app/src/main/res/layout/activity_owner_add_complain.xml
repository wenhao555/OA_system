<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.oa_system.OwnerAddComplain">

    <LinearLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_size"
                android:text="业主:"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="天一"
                android:editable="false"
                android:textSize="@dimen/item_text_size"
                android:gravity="center"
                android:id="@+id/complain_username"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/register_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="投诉描述"
            android:gravity="center"
            android:textSize="@dimen/title_size"/>
        <EditText
            android:layout_marginTop="@dimen/register_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="填写事件描述"
            android:textSize="@dimen/item_text_size"
            android:minLines="5"
            android:gravity="top"
            android:id="@+id/complain_content"/>

        <TextView
            android:layout_marginTop="@dimen/register_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="管理员反馈信息"
            android:gravity="center"
            android:textSize="@dimen/title_size"/>
        <EditText
            android:layout_marginTop="@dimen/register_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="5"
            android:gravity="top"
            android:editable="false"
            android:id="@+id/complain_feedback"
            android:textSize="@dimen/item_text_size"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/do_add_complain"
            android:text="投诉"/>
    </LinearLayout>

</RelativeLayout>
