<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.oa_system.AdminAdvertiseActivity">

    <LinearLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView android:text="填写公告内容"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/title_size"/>
        <EditText
            android:layout_marginTop="@dimen/register_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="6"
            android:gravity="top"
            android:hint="请填写公告内容"
            android:id="@+id/advertise_content"
            android:textSize="@dimen/item_text_size"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/do_upload"
            android:text="上传"/>

    </LinearLayout>


    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_fragment"
        android:name="com.example.oa_system.BottomFragment"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
